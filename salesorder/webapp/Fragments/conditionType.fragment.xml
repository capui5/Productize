<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="{i18n>Payment}"
        showHeader="true"
    >
        <beginButton>
            <Button
                text="{i18n>Confirm}"
                type="Emphasized"
                press="onConditionTypeConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>Cancel}"
                press="onConditionTypeCancel"
            />
        </endButton>
        <content>
            <f:Form editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout
                        breakpointL="900px"
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="2"
                        columnsM="2"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>Payment_Mode}">
                                <f:fields>
                                    <Select
                                        forceSelection="false"
                                        items="{mainModel>/ConditionsSet}"
                                    >
                                        <items>
                                            <core:Item
                                                text="{mainModel>CondTypeDesc}"
                                                key="{mainModel>CondType}"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Payment_Mode}">
                                <f:fields>
                                    <Select
                                        forceSelection="false"
                                        items="{mainModel>/ConditionsSet}"
                                    >
                                        <items>
                                            <core:Item
                                                text="{mainModel>CondTypeDesc}"
                                                key="{mainModel>CondType}"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Payment_Mode}">
                                <f:fields>
                                    <Select
                                        forceSelection="false"
                                        items="{mainModel>/ConditionsSet}"
                                    >
                                        <items>
                                            <core:Item
                                                text="{mainModel>CondTypeDesc}"
                                                key="{mainModel>CondType}"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>Amount}">
                                <f:fields>
                                    <HBox>
                                        <Input
                                            type="Number"
                                            showSuggestion="true"
                                            liveChange="onPriceUpdate1"
                                        />
                                        <Button
                                            icon="sap-icon://reset"
                                            type="Transparent"
                                            press="handleResetConditionType1"
                                        />
                                    </HBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Amount}">
                                <f:fields>
                                    <HBox>
                                        <Input
                                            type="Number"
                                            liveChange="onPriceUpdate2"
                                        />
                                        <Button
                                            icon="sap-icon://reset"
                                            type="Transparent"
                                            press="handleResetConditionType2"
                                        />
                                    </HBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Amount}">
                                <f:fields>
                                    <HBox>
                                        <Input
                                            type="Number"
                                            liveChange="onPriceUpdate3"
                                        />
                                        <Button
                                            icon="sap-icon://reset"
                                            type="Transparent"
                                            press="handleResetConditionType3"
                                        />
                                    </HBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="">
                                <f:fields>
                                    <Label
                                        design="Bold"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="">
                                <f:fields>
                                    <Label
                                        design="Bold"
                                        id="balanceText"
                                        
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
    </Dialog>
</core:FragmentDefinition>
