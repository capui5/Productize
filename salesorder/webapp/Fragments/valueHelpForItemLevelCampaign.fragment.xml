<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="selectDialog"
		title="Campaign"
		  items="{
					path: 'mainModel>/CampaignSet',
					suspended: true
				}"
		 search=".onSearchCampaign" 
		confirm=".onValueHelpClose"
		cancel=".onValueHelpClose">
		<StandardListItem
			
			iconDensityAware="false"
			iconInset="false"
			title="{mainModel>CampaignId}"
			description="{mainModel>CampaignId} {mainModel>CampaignIdDesc}"
			/>
	</SelectDialog>
</core:FragmentDefinition>